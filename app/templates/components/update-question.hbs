{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s Question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Question</label>
          {{input value=question id="question"}}
        </div>

        <div class="form-group">
          <label for="type">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="city">Additional Notes</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
